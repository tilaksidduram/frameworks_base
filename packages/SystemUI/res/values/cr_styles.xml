<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextAppearance.StatusBar.CarrierLabel" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- App side bar -->
    <style name="AppSidebarItemText" >
        <item name="android:textColor">@color/sidebar_item_text_color</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/sidebar_item_text_shadow_color</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
    </style>

    <!-- App circle side bar -->
    <style name="ListTheme" parent="@*android:style/Theme.Holo">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:listSelector">@*android:color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:clipChildren">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:divider">@null</item>
    </style>

</resources>
